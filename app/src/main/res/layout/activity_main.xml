<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入需要转换的英文"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <Button
                android:id="@+id/btn_text_to_speech"
                style="@style/KButton"
                android:text="文字转语音(English)"
                android:textAllCaps="false"
                android:background="#0099FF" />

            <Button
                android:id="@+id/btn_play_single_sound"
                style="@style/KButton"
                android:text="播放单一音频文件"
                android:background="#009999" />

            <Button
                android:id="@+id/btn_play_multi_sounds"
                style="@style/KButton"
                android:text="连续播放多个音频文件"
                android:background="#00CCCC" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>